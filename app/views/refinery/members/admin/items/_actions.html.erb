<ul>
  <% if ::Refinery::Members::Admin::ItemsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.members_admin_items_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.back_to_groups'), refinery.members_admin_groups_path, :class => 'go_icon' %>
  </li>
  <li>
    <%= link_to t('.create_new'), refinery.new_members_admin_item_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Members::Admin::ItemsController.sortable? && ::Refinery::Members::Item.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Members"),
                 refinery.members_admin_items_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Members"),
                 refinery.members_admin_items_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
