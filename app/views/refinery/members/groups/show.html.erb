<% content_for :body_content_title do %>
  <%= @group.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1><%=raw @group.name %></h1>
    <ul id="members">
      <% @group.items.each do |item| %>
        <li>
          <%= link_to item.name, refinery.members_group_item_path(@group, item) %>
        </li>
      <% end %>
    </ul>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="member_groups">
      <% @groups.each do |group| %>
        <li>
          <%= link_to group.name, refinery.members_group_path(group) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
